<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="4dp"
    android:focusable="false"
    android:focusableInTouchMode="true"
    android:paddingBottom="10dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="10dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp"
    tools:context=".adapter.RankRecyclerAdapterMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rankRecyclerViewImage_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                app:srcCompat="@mipmap/ic_launcher" />

            <RatingBar
                android:id="@+id/star_main"
                style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="2dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="5"
                android:stepSize="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTitle_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:letterSpacing="0.02"
                android:maxLines="1"
                android:text="이것이 제목이다"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textDateStart_main"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:letterSpacing="0.02"
                    android:text="전시시작일 "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#66000000"></TextView>

                <TextView
                    android:id="@+id/textFromTo_main"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:letterSpacing="0.02"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="~"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#66000000"></TextView>

                <TextView
                    android:id="@+id/textDateEnd_main"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="center_vertical"
                    android:letterSpacing="0.02"
                    android:text=" 전시마감일"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#66000000"></TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/textExhibition_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:letterSpacing="0.02"
                android:text="전시장"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#66000000" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>