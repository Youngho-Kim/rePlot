<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardBackgroundColor="#f3f3f3"
    tools:context=".adapter.FindRecyclerAdapterSearch">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/rankRecyclerViewImage_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textStar_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:letterSpacing="0.02"
                android:paddingLeft="20dp"
                android:text="여기는 별점이 들어갑니다."
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/textTitle_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:letterSpacing="0.02"
                android:paddingLeft="20dp"
                android:text="이것이 제목이다"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textDateStart_search"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:letterSpacing="0.02"
                    android:text="전시시작일 "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"></TextView>
                <TextView
                    android:id="@+id/textFromTo_search"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:letterSpacing="0.02"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="~"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"></TextView>
                <TextView
                    android:id="@+id/textDateEnd_search"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:letterSpacing="0.02"
                    android:text=" 전시마감일"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"></TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/textExhibition_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:letterSpacing="0.02"
                android:paddingLeft="20dp"
                android:text="전시장"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>